{
  "name": "xburnandmint",
  "version": "1.0.0",
  "description": "Cross Chain Burn and Mint for ERC721 and ERC20 tokens",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "solhint": "npx solhint -f table contracts/**/*.sol",
    "prettier:solidity": "npx prettier --write contracts/**/*.sol",
    "deploy-ERC721": "npx hardhat run ./scripts/deployERC721.ts --network",
    "upgrade-ERC721": "npx hardhat run ./scripts/upgradeERC721.ts --network",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codora-io/XBurnAndMint.git"
  },
  "author": "",
